          <span class="p">&lt;</span><span class="n">file</span> <span class="n">src</span><span class="p">=</span><span class="s">".\NrzlmhRzvy\bin\Debug\NrzlmhRzvy.dll"</span> <span class="n">target</span><span class="p">=</span><span class="s">"ref\uap10.0"</span><span class="p">/&gt;</span>
        <span class="p">&lt;</span><span class="n">file</span> <span class="n">src</span><span class="p">=</span><span class="s">".\NrzlmhRzvy\bin\Debug\NrzlmhRzvy.pdb"</span> <span class="n">target</span><span class="p">=</span><span class="s">"ref\uap10.0"</span><span class="p">/&gt;</span>
